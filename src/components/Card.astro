---
import { Icon } from 'free-astro-components'

interface Props {
  type: 'primary' | 'secondary' | 'light'
  icon?: string
  title?: string
  description?: string
}

const { type, icon, title, description } = Astro.props
const typeClasses = {
  primary: 'bg-primary text-white',
  secondary: 'bg-secondary text-dark',
  light: 'bg-white text-dark',
}[type]

const cardClasses = ['flex flex-col gap-8 h-full rounded-3xl p-8', typeClasses]
  .filter(Boolean)
  .join(' ')

const iconColor = {
  primary: 'text-secondary',
  secondary: 'text-dark',
  light: 'text-primary',
}[type]

const iconClasses = ['w-24 h-24', iconColor].filter(Boolean).join(' ')
---

<article class={cardClasses}>
  <div>
    <Icon icon={icon} class={iconClasses} />
  </div>
  <div class="flex flex-col gap-4">
    <h3 class="text-3xl font-bold">{title}</h3>
    <p class="flex-1">{description}</p>
  </div>
</article>
