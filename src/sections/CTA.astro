---
interface Props {
  title?: string
  description?: string
  align?: 'center' | 'left' | 'right'
}

const { title, description, align } = Astro.props
---

<section id="form" class="pb-16 lg:pb-32">
  <div class="container">
    <div
      class="bg-gradient-to-r from-primary/50 to-secondary/50 rounded-3xl p-px"
    >
      <div
        class:list={[
          'flex flex-col gap-16 bg-neutral-100 rounded-3xl px-8 lg:px-16 xl:px-24 py-16 lg:py-32',
          align === 'center' ? 'text-center' : '',
        ]}
      >
        <div class="flex flex-col gap-4">
          {
            title && (
              <h2
                class:list={[
                  'text-neutral-700 text-3xl lg:text-4xl [&>strong]:font-medium',
                  align === 'center' ? 'mx-auto' : '',
                ]}
                set:html={title}
              />
            )
          }
          {
            description && (
              <p
                class:list={[
                  'text-neutral-500 lg:text-lg',
                  align === 'center' ? 'mx-auto' : '',
                ]}
                set:html={description}
              />
            )
          }
        </div>

        <form
        name="contact"
        method="POST"
        data-netlify="true"
        class="flex flex-col gap-6 w-full max-w-2xl mx-auto text-left"
      >
        <input type="hidden" name="form-name" value="contact" />
      
        <!-- Campos de nombre y apellidos en la misma fila en pantallas grandes -->
        <div class="flex flex-col lg:flex-row gap-6">
          <!-- Campo de nombre -->
          <div class="flex flex-col gap-2 flex-1">
            <label for="name" class="text-neutral-700">Nombre</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="p-3 rounded-lg border border-neutral-300 focus:border-primary focus:ring-2 focus:ring-primary/50"
            />
          </div>
      
          <!-- Campo de apellidos -->
          <div class="flex flex-col gap-2 flex-1">
            <label for="surname" class="text-neutral-700">Apellidos</label>
            <input
              type="text"
              id="surname"
              name="surname"
              required
              class="p-3 rounded-lg border border-neutral-300 focus:border-primary focus:ring-2 focus:ring-primary/50"
            />
          </div>
        </div>
      
        <!-- Campo de email -->
        <div class="flex flex-col gap-2">
          <label for="email" class="text-neutral-700">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="p-3 rounded-lg border border-neutral-300 focus:border-primary focus:ring-2 focus:ring-primary/50"
          />
        </div>
      
        <!-- Campo de teléfono -->
        <div class="flex flex-col gap-2">
          <label for="phone" class="text-neutral-700">Teléfono</label>
          <input
            type="tel"
            id="phone"
            name="phone"
            class="p-3 rounded-lg border border-neutral-300 focus:border-primary focus:ring-2 focus:ring-primary/50"
          />
        </div>
      
        <!-- Campo de LinkedIn (opcional) -->
        <div class="flex flex-col gap-2">
          <label for="linkedin" class="text-neutral-700">Perfil de LinkedIn (opcional)</label>
          <input
            type="url"
            id="linkedin"
            name="linkedin"
            class="p-3 rounded-lg border border-neutral-300 focus:border-primary focus:ring-2 focus:ring-primary/50"
          />
        </div>
      
        <!-- Campo de MBTI (opcional) -->
        <div class="flex flex-col gap-2">
          <label for="mbti" class="text-neutral-700">MBTI (opcional)</label>
          <input
            type="text"
            id="mbti"
            name="mbti"
            class="p-3 rounded-lg border border-neutral-300 focus:border-primary focus:ring-2 focus:ring-primary/50"
          />
        </div>
      
        <!-- Botón de envío -->
        <button
          type="submit"
          class="mt-4 bg-primary text-white py-3 px-6 rounded-lg hover:bg-primary/90 transition-colors"
        >
          Enviar
        </button>
      </form>
      </div>
    </div>
  </div>
</section>